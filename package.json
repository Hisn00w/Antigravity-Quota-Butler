{
  "name": "antigravity-quota-butler",
  "displayName": "AG 额度管家 (AG Quota Butler)",
  "description": "实时监控 Antigravity AI 模型使用额度，集成状态栏、消耗趋势图表及智能平替建议。",
  "version": "1.3.0",
  "publisher": "hisn0w",
  "icon": "assets/AntiGravityQuota.png",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./export/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ag-quota.refresh",
        "title": "AGQ: 立即刷新"
      },
      {
        "command": "ag-quota.reconnect",
        "title": "AGQ: 重新连接"
      },
      {
        "command": "ag-quota.show_logs",
        "title": "AGQ: 显示调试日志"
      },
      {
        "command": "ag-quota.show_dashboard",
        "title": "AGQ: 额度仪表盘"
      }
    ],
    "configuration": {
      "title": "AGQ",
      "properties": {
        "ag-quota.enabled": {
          "type": "boolean",
          "default": true,
          "description": "启用自动监控",
          "order": 1
        },
        "ag-quota.pollingInterval": {
          "type": "number",
          "default": 120,
          "minimum": 30,
          "description": "轮询间隔（秒）（最小：30秒，推荐：120秒+）",
          "order": 2
        },
        "ag-quota.pinnedModels": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "要在状态栏中显示的模型 ID。如果为空，则显示 'AGQ'。",
          "order": 3
        },
        "ag-quota.showPromptCredits": {
          "type": "boolean",
          "default": false,
          "description": "在状态栏中显示提示词点数。",
          "order": 4
        },
        "ag-quota.warningThreshold": {
          "type": "number",
          "default": 20,
          "minimum": 0,
          "maximum": 100,
          "description": "额度报警阈值（百分比）。当剩余额度低于此值时将触发告警。",
          "order": 5
        },
        "ag-quota.enableNotifications": {
          "type": "boolean",
          "default": true,
          "description": "当额度低于阈值时发送桌面通知提醒。",
          "order": 6
        },
        "ag-quota.autoSwitchModels": {
          "type": "boolean",
          "default": false,
          "description": "当额度较低时，是否允许插件协助建议切换模型。",
          "order": 7
        }
      }
    }
  },
  "scripts": {
    "node:vsix:package": "npm run compile && npx vsce package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/vsce": "3.7.1",
    "eslint": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/Hisn00w/Antigravity-Quota-Butler.git"
  },
  "keywords": [
    "antigravity",
    "quota",
    "ai"
  ],
  "author": "Henrik Mertens",
  "license": "MIT"
}